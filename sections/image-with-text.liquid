{%- style -%}
  @font-face {
    font-family: "font1";
    src: url("https://res.cloudinary.com/dcqzhsbcc/raw/upload/v1678650342/Talal_Fonts/PlazaStd_obyh5l.otf");
  }

  @font-face {
    font-family: "font2";
    src: url("https://res.cloudinary.com/dcqzhsbcc/raw/upload/v1678650342/Talal_Fonts/Ballantines-Bold_yyysjp.ttf");
  }

  @font-face {
    font-family: "font3";
    src: url("https://res.cloudinary.com/dcqzhsbcc/raw/upload/v1678650342/Talal_Fonts/FontsFree-Net-black-seashore_abg9sa.ttf");
  }

  @font-face {
    font-family: "font4";
    src: url("https://res.cloudinary.com/dcqzhsbcc/raw/upload/v1678650342/Talal_Fonts/ScriptMTBold_owebd9.ttf");
  }

  @font-face {
    font-family: "font5";
    src: url("https://res.cloudinary.com/dcqzhsbcc/raw/upload/v1678650342/Talal_Fonts/Commercial_Script_Regular_baz9au.ttf");
  }

  @font-face {
    font-family: "font6";
    src: url("https://res.cloudinary.com/dcqzhsbcc/raw/upload/v1678650342/Talal_Fonts/Parsley_Script_Regular_tfo2xl.ttf");
  }

  @font-face {
