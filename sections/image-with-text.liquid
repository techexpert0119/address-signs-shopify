    src: url("https://res.cloudinary.com/dcqzhsbcc/raw/upload/v1678650342/Talal_Fonts/brtswfte_wb0fj9.ttf");
  }

  @font-face {
    font-family: "font8";
    src: url("https://res.cloudinary.com/dcqzhsbcc/raw/upload/v1679950337/PetitFormalScript-Regular_ld2nf4.ttf");
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  #address-field {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 7rem;
    font-family: "font1";
    font-weight: bold;
    color: #000;
  }
  .approx-width-container {
    font-family: sans-serif;
    font-size: 3rem;
    background: white;
    padding: 0.75rem;
    border: 3px black solid;
    margin-bottom: 1rem;
  }
  .big-stroke {
    -webkit-text-stroke: 1px #000;#
  }
  .big-stroke.white {
    -webkit-text-stroke: 1px #fff;
  }
  .big-stroke-harder {
    -webkit-text-stroke: 3px #000;
  }
  .big-stroke-harder.white {
    -webkit-text-stroke: 3px #fff;
  }
  #address-field p {
    text-align: center;
    overflow-wrap: break-word;
    margin: 0;
    padding: 0 2rem;
  }
  #address-field p.white {
    text-shadow: #000 2px 1px 1px;
  }
  #address-field p:not(.white) {
      text-shadow: #fff 1px 1px 1px;
  }
  #address-field p.big-stroke-harder.white {
    text-shadow: #000 3px 1px 1px;
  }
  #address-field p.big-stroke-harder:not(.white) {
      text-shadow: #fff 3px 1px 1px;
  }
  textarea {
    resize: none;
    margin-top: 10px;
    width: 500px;
    height: 100px;
    -moz-border-bottom-colors: none;
    -moz-border-left-colors: none;
    -moz-border-right-colors: none;
    -moz-border-top-colors: none;
    background: none repeat scroll 0 0 rgba(0, 0, 0, 0.07);
    border: none;
    border-image: none;
    border-radius: 6px;
    color: #555555;
    font-family: "Helvetica Neue", Helvetica,Arial,sans-serif;
    font-size: 1em;
    line-height: 1.4em;
    padding: 5px 8px;
    transition: background-color 0.2s ease 0s;
  }
  textarea.error {
    outline: 2px solid red;
    background: rgba(255, 0, 0, 0.07);
  }
  textarea:focus {
      background: none repeat scroll 0 0 #FFFFFF;
      outline-width: 0;
  }
  .address_textarea-container {
    display: flex;
    flex-direction: column;
  }
  .font-buttons, .size-buttons {
    display: flex;
    flex-wrap: wrap;
  }
  .font-buttons button, .two-button-block button, .size-buttons button {
    padding: 0.75rem;
    background: white;
    width: 110px;
    height: 50px;
    border: none;
    transition: all 0.15s ease-out;
    cursor: pointer;
    border: 1px solid gray;
    margin: 0.5rem;
    font-size: 1.75rem;
  }
  main .size-buttons button {
    width: 150px;
  }
  main .two-button-block button {
    width: 80px;
    height: 40px;
    font-size: 1.5rem;
    padding: 0.5rem;
  }
  button.selected {
    background: lightgreen;
  }
  .center-item {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .order-button a {
    width: 100%;
    font-size: 3rem;
  }
  .bold-text {
    font-weight: bold;
    font-size: 3.5rem;
    margin: 0.5rem 0;
  }
  .yellow-text {
    background: yellow;
  }
  .font-buttons button:hover, .two-button-block button:hover {
    border-color: black;
  }
  .font-buttons button:nth-child(1) {
    font-family: "font1";
  }
  .font-buttons button:nth-child(2) {
    font-family: "font2";
  }
  .font-buttons button:nth-child(3) {
    font-family: "font3";
  }
  .font-buttons button:nth-child(4) {
    font-family: "font4";
  }
  .font-buttons button:nth-child(5) {
    font-family: "font5";
  }
  .font-buttons button:nth-child(6) {
    font-family: "font6";
  }
  .font-buttons button:nth-child(7) {
    font-family: "font7";
  }
  .font-buttons button:nth-child(8) {
    font-family: "font8";
  }
  .negative-margin-top {
    margin-top: 1rem;
  }
  .negative-margin-top p {
    margin: 0.5rem 0;
  }
  main .image-with-text__media {
    min-height: 300px;
  }
  .background-colors div {
    display: inline-block;
    width: 50px;
    height: 50px;
    border: 1px solid gray;
    cursor: pointer;
  }
  .background-colors div.selected {
    outline: 2.5px solid lightgreen;
  }
  .background-colors div:nth-child(2) {
    background: url("https://res.cloudinary.com/dcqzhsbcc/image/upload/v1678658092/Talal_Backgrounds/Plugin_1_u77t6n.png");
    background-size: 50%;
  }
  .background-colors div:nth-child(3) {
    background: url("https://res.cloudinary.com/dcqzhsbcc/image/upload/v1678658093/Talal_Backgrounds/red-bricks_d0gbnp.jpg");
    background-size: 50%;
  }
  .background-colors div:nth-child(4) {
    background: url("https://res.cloudinary.com/dcqzhsbcc/image/upload/v1678658091/Talal_Backgrounds/Plugin_5_mls92h.jpg");
    background-size: 50%;
  }
  .background-colors div:nth-child(5) {
    background: url("https://res.cloudinary.com/dcqzhsbcc/image/upload/v1678658092/Talal_Backgrounds/Plugin_2_ign8rh.png");
    background-size: 50%;
  }
  .background-colors div:nth-child(6) {
    background: url("https://res.cloudinary.com/dcqzhsbcc/image/upload/v1678658092/Talal_Backgrounds/Plugin_3_eqgdxr.jpg");
    background-size: 50%;
  }
  .background-colors div:nth-child(7) {
    background: url("https://res.cloudinary.com/dcqzhsbcc/image/upload/v1678658091/Talal_Backgrounds/Plugin_4_zjcvuy.jpg");
    background-size: 50%; 
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="image-with-text image-with-text--{{ section.settings.content_layout }} page-width isolate{% if settings.text_boxes_border_thickness > 0 and settings.text_boxes_border_opacity > 0 and settings.media_border_thickness > 0 and settings.media_border_opacity > 0 %} collapse-borders{% endif %}{% unless section.settings.color_scheme == 'background-1' and settings.media_border_thickness > 0 and settings.text_boxes_shadow_opacity == 0 and settings.text_boxes_border_thickness == 0 or settings.text_boxes_border_opacity == 0 %} collapse-corners{% endunless %} section-{{ section.id }}-padding">
  <div class="image-with-text__grid grid grid--gapless grid--1-col grid--{% if section.settings.desktop_image_width == 'medium' %}2-col-tablet{% else %}3-col-tablet{% endif %}{% if section.settings.layout == 'text_first' %} image-with-text__grid--reverse{% endif %}">
    <div class="image-with-text__media-item image-with-text__media-item--{{ section.settings.desktop_image_width }} image-with-text__media-item--{{ section.settings.desktop_content_position }} grid__item">
      <div class="image-with-text__media image-with-text__media--{{ section.settings.height }} gradient color-{{ section.settings.color_scheme }} global-media-settings {% if section.settings.image != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %}"
        {% if section.settings.height == 'adapt' and section.settings.image != blank %} style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"{% endif %}
      >
        {%- if section.settings.image != blank -%}
          {%- capture sizes -%}(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2){%- endcapture -%}
          {{ section.settings.image | image_url: width: 1500 | image_tag:
            loading: 'lazy',
            sizes: sizes,
            widths: '165, 360, 535, 750, 1070, 1500'
          }}
          <div id="address-field">
            <p>
              613 Elite Street  
            </p>
          </div>
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
    </div>
    <div class="image-with-text__text-item grid__item">
      <div id="ImageWithText--{{ section.id }}" class="image-with-text__content image-with-text__content--{{ section.settings.desktop_content_position }} image-with-text__content--desktop-{{ section.settings.desktop_content_alignment }} image-with-text__content--mobile-{{ section.settings.mobile_content_alignment }} image-with-text__content--{{ section.settings.height }} gradient color-{{ section.settings.color_scheme }} content-container">
        {%- for block in section.blocks -%}
          {% case block.type %}
            {%- when 'heading' -%}
              <h2 class="image-with-text__heading {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
                {{ block.settings.heading | escape }}
              </h2>
            {%- endcase -%}
        {%- endfor -%}

        <div class="address_textarea-container">
          <label for="address_textarea" >Enter Your Address *</label>
          <textarea id="address_textarea" rows="0" placeholder="613 Elite Street" maxlength="21"></textarea>
        </div>

        <div class="font-buttons">
          <button class="selected">Font 1</button>
          <button>Font 2</button>
          <button>Font 3</button>
          <button>Font 4</button>
          <button>Font 5</button>
          <button>Font 6</button>
          <button>Font 7</button>
          <button>Font 8</button>
        </div>

        <div class="two-button-block negative-margin-top">
          <p>Sign Colour Options</p>

          <button class="black-color selected">Black</button>
          <button class="white-color">White</button>
        </div>

        <div class="negative-margin-top">
          <p>Sign Size Options</p>

          <div class="size-buttons">
            <button class="selected">S</button>
            <button>M</button>
            <button>L</button>
          </div>
        </div>
        
        <div class="background-colors negative-margin-top">
          <p>Choose Background</p>

          <div class="selected"></div>
          <div></div>
          <div></div>
          <div></div>
          <div></div>
          <div></div>
        </div>

         <div class="price-total center-item negative-margin-top">
          <h1 class="bold-text">$198.00</h1>
        </div>

        <div class="center-item order-button negative-margin-top">
        {%- for block in section.blocks -%}
          {%- if block.settings.button_label != blank -%}
            <a{% if block.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link }}"{% endif %} class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}" {{ block.shopify_attributes }}>
              {{ block.settings.button_label | escape }}
            </a>
          {%- endif -%}
        {%- endfor -%}
        </div>

        <div class="text-align-center negative-margin-top">
          <h3>All sign orders include a template for installation, instructions for the installation, and a drill bit <span class="yellow-text">(Drill not included)</span></h3>
        </div>
        
      </div>
    </div>
  </div>
</div>

